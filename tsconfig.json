{
    "compilerOptions": {
        "target": "ES2020",
        "watch": true,
        "lib": ["ES2017"],
        "allowSyntheticDefaultImports": true,
        "isolatedModules": false,
        "baseUrl": "server",
        "moduleResolution": "node",
        "paths": {
            "@helpers/*": ["helpers/*"],
            "@models": ["models"],
            "@models/*": ["models/*"],
            "@routes/*": ["routes/*"]
        }
    },
    "include": ["./**/*"],
    "exclude": ["node_modules"]
}